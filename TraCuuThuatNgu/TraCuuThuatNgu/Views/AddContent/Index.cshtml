@{
    ViewBag.Title = "Đóng góp của tôi";
    Layout = "~/Views/Shared/_Root.cshtml";
}
@using PagedList.Mvc;
@using PagedList;

<div class="span span9-account">
    <div class="head">
        <div class="icm-user">
        </div>
        <h1>
            Thông tin tài khoản</h1>
        <div class="clear">
        </div>
    </div>
    <div class="block">
        <ul class="simple-menu">
            <li><a href="/Account/Info">Thông tin tài khoản</a> </li>
            <li><a href="/Account/ChangePassword">Đổi mật khẩu</a> </li>
            <li class="active"><a class="active"  href="/AddContent">Đóng góp của tôi</a> </li>
            <li><a href="/MyComments">Bình luận của tôi</a> </li>
            <li><a href="/UserHistory">Lịch sử tra cứu</a> </li>
            <li><a href="/Like">Yêu thích</a> </li>
        </ul>
    </div>
</div>
<div class="span span8-account">
    <div class="head">
        <div class="icm-list">
        </div>
        <h1>
            Đóng góp của tôi</h1>
        <div class="clear">
        </div>
    </div>
    <div class="block">
        <table cellpadding="0" cellspacing="0" width="100%" class="table">
            <thead>
                <tr>
                    <th width="15%">
                        Thuật ngữ
                    </th>
                    <th width="30%">
                        Giải thích
                    </th>
                    <th width="30%">
                        Ví dụ
                    </th>
                    <th width="15%">
                        Thêm lúc
                    </th>
                    <th align="center" width="10%">
                        <center>Thao tác</center>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.AddContentList)
                {
                    <tr>
                        <td>
                            <span class="keyword-history"><a href="/Result?keyword=@item.Keyword">@item.Keyword</a></span>
                        </td>
                        <td>
                            @item.Def
                        </td>
                        <td>
                            @item.Exa
                        </td>
                        <td>
                            @String.Format("{0:d/M/yyyy HH:mm}", item.DateAdd)
                        </td>
                        <td align="center">
                            <a class="btn-delete btn-add-content" title="Xóa" href="#">
                                <input type="hidden" value="@item.UserContentId" /></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="view-more">
            @Html.PagedListPager((IPagedList)ViewBag.AddContentList, page => Url.Action("Index", new { page = page }), new PagedListRenderOptions { LinkToFirstPageFormat = "<< Đầu tiên", LinkToPreviousPageFormat = "&larr; Trước", LinkToNextPageFormat = "Sau &rarr;", LinkToLastPageFormat = "&Uacute;Cuối >>" })
            @*@Html.PagedListPager((IPagedList)Model.AllUserHistoryPaged, page => Url.Action("Index", new { page }))*@</div>
        <div class="clear">
        </div>
    </div>
</div>
<div class="clear">
</div>
