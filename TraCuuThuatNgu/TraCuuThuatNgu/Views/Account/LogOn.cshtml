@model TraCuuThuatNgu.Models.LogOnModel
@{   
    ViewBag.Title = "Đăng nhập";
}
@section Header {
    <div id="header-bar">
        <ul id="menu">
            <li class="home-icon"><a href="@Url.Content("~/Home")">Trang chủ</a> </li>
            @Html.Partial("_LogOnPartial")
        </ul>
    </div>
}
<div>
    @*<div id="home-search">    
</div>*@
    <div class="logon-info">
        <div class="logon-headers">
            <div id="logo" style="width: 300px; margin-top: 0px">
                <img width="343px" src="../../Content/img/logo4.png" alt="Tra cứu thuật ngữ" />
            </div>
            <h1 class="redtext" style="color: #dd4b39">
                Tài khoản</h1>
        </div>
        <p>
            Hệ thống cung cấp thêm nhiều tính năng khi bạn đăng nhập.
        </p>
        <p>
            Đăng nhập ở bên phải hoặc <a href="/Account/Register">
                tạo tài khoản miễn phí</a>.</p>
        @*<ul class="features clearfix">
            <li>
                <img src="//www.gstatic.com/accounts/services/default/googlemail.png" alt="">
                <p class="title">
                    Gmail</p>
                <p>
                    Trò chuyện với bạn bè và không bao giờ bỏ lỡ email quan trọng.</p>
            </li>
            <li>
                <img src="//ssl.gstatic.com/images/icons/feature/search-b42.png" alt="">
                <p class="title">
                    Tìm kiếm được cá nhân hóa</p>
                <p>
                    Nhận nhiều kết quả có liên quan hơn dựa trên các tìm kiếm trước đây của bạn.</p>
            </li>
            <li>
                <img src="//www.gstatic.com/accounts/services/default/homepage.png" alt="">
                <p class="title">
                    Bạn thích Google?</p>
                <p>
                    <a href="//www.google.com/intl/vi/homepage/#utm_source=gaia&amp;utm_medium=embedded&amp;ch=chbk">
                        Đặt Google làm trang chủ của bạn.</a></p>
            </li>
        </ul>*@
    </div>
    <div class="logon-wapper not-popup">
        <div class="logon-title">
            <h2>
                ĐĂNG NHẬP</h2>
        </div>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        @Html.ValidationSummary(true, "Đăng nhập không thành công.")
        @using (Html.BeginForm())
        {    
            <div class="logon-form">
                <div class="editor-label">
                    Tên đăng nhập
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.UserName)
                    <br />
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="editor-label">
                    Mật khẩu
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.Password)
                    <br />@Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="editor-label">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    Ghi nhớ
                </div>
                <p>
                    <input type="submit" class="btn" value="Đăng nhập" />
                </p>
                <p>
                    <b>@Html.ActionLink("Đăng ký", "Register")</b> nếu bạn chưa có tài khoản.<br />
                    @Html.ActionLink("Quên mật khẩu?","ForgotPassword")
                </p>
            </div>
        }
    </div>
    <div class="clear">
    </div>
</div>
<div id="extra-infor">
    <p>
        Hệ thống tra cứu thuật ngữ hành chính văn phòng và hoạt động xã hội.</p>
</div>
@section Footer {
    <div class="footer-info">
        <a href="#">Hướng dẫn sử dụng</a> <a href="#">Giới thiệu</a> <a href="#">Phát triển</a>
    </div>
}
