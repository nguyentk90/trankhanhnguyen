@model TraCuuThuatNgu.Models.RegisterModel
@{
    ViewBag.Title = "Đăng ký thành viên";
}
@section Header {
    <div id="header-bar">
        <ul id="menu">
            <li class="home-icon"><a href="@Url.Content("~/Home")">Trang chủ</a> </li>
            @Html.Partial("_LogOnPartial")
        </ul>
    </div>
}
<div>
    <div class="logon-info">
        <div class="logon-headers">
            <div id="logo" style="width: 300px; margin-top: 0px">
                <img width="343px" src="../../Content/img/logo4.png" alt="Tra cứu thuật ngữ" />
            </div>
            <h1 class="redtext" style="color: #dd4b39">
                Tài khoản</h1>
        </div>
        <p>
            Hệ thống cung cấp thêm nhiều tính năng khi bạn có một tài khoản.
        </p>
        <p>
            Đăng ký ở bên phải hoặc <a href="/Account/LogOn">đăng nhập vào hệ thống</a> nếu đã có một tài khoản.</p>
        
    </div>
    <div class="logon-wapper not-popup">
        <div class="logon-title">
            <h2>
                Đăng ký tài khoản</h2>
        </div>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "Đăng ký tài khoản không thành công.")
    
            <div class="register-form">
                <p>
                    Mật khẩu phải nhiều hơn @Membership.MinRequiredPasswordLength kí tự.
                </p>
                <div class="editor-label">
                    Họ và tên
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.FullName)
                    <br />@Html.ValidationMessageFor(m => m.FullName)
                </div>
                <div class="editor-label">
                    Tên đăng nhập
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.UserName)
                    <br />@Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="editor-label">
                    Email
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Email)
                    <br />@Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="editor-label">
                    Mật khẩu
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.Password)
                    <br />@Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="editor-label">
                    Nhập lại mật khẩu
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.ConfirmPassword)
                    <br />@Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
                <p>
                    <input type="submit" class="btn" value="Đăng ký" />
                </p>
            </div>   
        }
    </div>
    <div class="clear">
    </div>
</div>
<div id="extra-infor">
    <p>
        Hệ thống tra cứu thuật ngữ hành chính văn phòng và hoạt động xã hội.</p>
</div>
@section Footer {
    <div class="footer-info">
        <a href="#">Hướng dẫn sử dụng</a> <a href="#">Giới thiệu</a> <a href="#">Phát triển</a>
    </div>
}
