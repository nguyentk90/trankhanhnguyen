@model TraCuuThuatNgu.ViewModels.InfoViewModel
@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Root.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="span span9-account">
    <div class="head">
        <div class="icm-user">
        </div>
        <h1>
            Thông tin tài khoản</h1>
        <div class="clear">
        </div>
    </div>
    <div class="block">
        <ul class="simple-menu">
            <li class="active"><a class="active" href="">Thông tin tài khoản</a> </li>
            <li><a href="/Account/ChangePassword">Đổi mật khẩu</a> </li>
            <li><a href="/AddContent">Đóng góp của tôi</a> </li>
            <li><a href="/MyComments">Bình luận của tôi</a> </li>
            <li><a href="/UserHistory">Lịch sử tra cứu</a> </li>
            <li><a href="/Like">Yêu thích</a> </li>
        </ul>
    </div>
</div>
<div class="span span8-account">
    <div class="head">
        <div class="icm-list">
        </div>
        <h1>
            Thông tin tài khoản</h1>
        <div class="clear">
        </div>
    </div>
    <div class="block">
        @using (Html.BeginForm())
        {               
            @Html.HiddenFor(x => x.UserId)
            <div class="entry-form">
                <div class="editor">
                    <div class="editor-label">
                        Họ tên
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(x => x.Fullname)
                    </div>
                    <div class="clear">
                    </div>
                </div>
                <div class="editor">
                    <div class="editor-label">
                        Tên đăng nhập
                    </div>
                    <div class="editor-field">
                        @Html.HiddenFor(x => x.Username)
                       <b>@Model.Username</b> 
                    </div>
                    <div class="clear">
                    </div>
                </div>
                <div class="editor">
                    <div class="editor-label">
                        Email
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(x => x.Email)
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                    <div class="clear">
                    </div>
                </div>
                <div class="editor">
                    <div class="editor-label">
                        Ngày sinh
                    </div>
                    <div class="editor-field">
                        @if (ViewBag.Birthday != null)
                        {
                            <input value="@String.Format("{0:dd/MM/yyyy}", ViewBag.Birthday)" name="birthday" type="text" />
                        }
                        else
                        { 
                            <input value="" name="birthday" type="text" />
                        }
                        (dd/MM/yyyy)
                        <br /> Ví dụ: 30/03/1990
                    </div>
                    <div class="clear">
                    </div>
                </div>
                <div class="editor">
                    <div class="editor-label">
                    </div>
                    <div class="editor-field">
                        <input type="submit" class="btn" value="Cập nhật" />
                        
                        <span style='color:green'>@ViewBag.Success</span>
                        <span style='color:red'>@ViewBag.Fail</span>
                    </div>
                    <div class="clear">
                    </div>
                </div>
            </div>   
        }
    </div>
</div>
<div class="clear">
</div>
