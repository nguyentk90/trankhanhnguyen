@model TraCuuThuatNgu.Models.ForgotPasswordModel
@{   
    ViewBag.Title = "Quên mật khẩu";
}
@section Header {
    <div id="header-bar">
        <ul id="menu">
            <li class="home-icon"><a href="@Url.Content("~/Home")">Trang chủ</a> </li>
            @Html.Partial("_LogOnPartial")
        </ul>
    </div>
}
<div>
    @*<div id="home-search">    
</div>*@
    <div class="logon-info">
        <div class="logon-headers">
            <div id="logo" style="width: 300px; margin-top: 0px">
                <img width="448px" src="../../Content/img/logo4.png" alt="Tra cứu thuật ngữ" />
            </div>
            <h1 class="redtext" style="color: #dd4b39">
                Quên mật khẩu</h1>
        </div>
        <p style="width:350px">
            Nhập email bạn đã dùng để đăng ký tài khoản, hệ thống sẽ tạo lại mật khẩu mới cho tài khoản của bạn và được gửi về email vừa nhập.
        </p>
        <p>
            <a href="/Account/Register">Tạo tài khoản miễn phí</a>.</p>        
    </div>
    <div class="logon-wapper not-popup">
        <div class="logon-title">
            <h2>
                Quên mật khẩu</h2>
        </div>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        @Html.ValidationSummary(true, "Gửi lại mật khẩu không thành công.")
        @using (Html.BeginForm())
        {    
            <div class="logon-form">
                <div class="editor-label">
                    Email
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Email)
                    <br />
                    @Html.ValidationMessageFor(m => m.Email)
                </div>               
                
                <p>
                    <input type="submit" class="btn" value="Tạo lại mật khẩu" />
                </p>                
                <p style="color:Green">
                    @ViewBag.Success
                </p> 
                <p style="color:red">
                    @ViewBag.Fail
                </p>                 
            </div>
        }
    </div>
    <div class="clear">
    </div>
</div>
<div id="extra-infor">
    <p>
        Hệ thống tra cứu thuật ngữ hành chính văn phòng và hoạt động xã hội.</p>
</div>
@section Footer {
    <div class="footer-info">
        <a href="#">Hướng dẫn sử dụng</a> <a href="#">Giới thiệu</a> <a href="#">Phát triển</a>
    </div>
}
